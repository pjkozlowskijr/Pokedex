{% extends "base.html.j2" %}

{% block css %}
    <link rel="stylesheet" href="{{url_for('static', filename='css/battle.css')}}">
{% endblock %}

{% block title %}
Battle
{% endblock %}

{% block content %}

<h1> Pok&eacute;mon Battleground</h1>
<a class="btn" href="{{url_for('main.view_users')}}">Battle Again&nbsp;<i class="bi bi-arrow-repeat"></i></a>
<div id="outcome">
    <h2>The battle has ended...</h2>
    <h2>{{results[-1]}}</h2>
    <img src="{{winner[0].get_icon_url()}}" alt="Winner's avatar.">
</div>
<div id="recap">
    <h3>Final round action:</h3>
    <ol>
    {% for result in results[:-1] %}
        <li>{{result}}</li>
    {% endfor %}
    </ol>
</div>

{% endblock %}