{% extends 'base.html.j2' %}

{% block css %}
    <link rel="stylesheet" href="{{url_for('static', filename='css/register.css')}}">
{% endblock %}


{% block title %}
    {% if current_user.is_authenticated %}
    Edit Profile
    {% else %}
    Register
    {% endif %}
{% endblock %}

{% block content %}
    {% if current_user.is_authenticated %}
    <h1>Edit Profile</h1>
    <p>Edit your profile by completing all fields in the form below.</p>
    {% else %}
    <h1>Register</h1>
    <p>Complete the following registration form to gain access to the Pokedex.</p>
    {% endif %}

    <form id="reg_form" action="{{url_for('edit_profile') if current_user.is_authenticated else url_for('register')}}" method="POST">
        {{form.hidden_tag()}}
        <div>
            {{form.icon.label(class="form-label")}}
            <div class="container mb-0">
                <div class="row justify-content-start">
                    {% for subfield in form.icon %}
                    <div class="col-2 text-center">
                        {{subfield.label | safe}}
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div class="container mt-0">
                <div class="row justify-content-start">
                    {% for subfield in form.icon %}
                    <div class="col-2 text-center">
                        {{subfield}}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div>
            {{form.first_name.label(class="form-label")}}
            {{form.first_name(class="form-control")}}
            {% for error in form.first_name.errors %}
                <small style="color:red;">{{error}}</small>
            {% endfor %}
        </div>
        <div>
            {{form.last_name.label(class="form-label")}}
            {{form.last_name(class="form-control")}}
            {% for error in form.last_name.errors %}
                <small style="color:red;">{{error}}</small>
            {% endfor %}
        </div>
        <div>
            {{form.email.label(class="form-label")}}
            {{form.email(class="form-control")}}
            {% for error in form.email.errors %}
                <small style="color:red;">{{error}}</small>
            {% endfor %}
        </div>
        <div>
            {{form.password.label(class="form-label")}}
            {{form.password(class="form-control")}}
            {% for error in form.password.errors %}
                <small style="color:red;">{{error}}</small>
            {% endfor %}
        </div>
        <div>
            {{form.confirm_password.label(class="form-label")}}
            {{form.confirm_password(class="form-control")}}
            {% for error in form.confirm_password.errors %}
                <small style="color:red;">{{error}}</small>
            {% endfor %}
        </div>
        <div>
            {{form.submit(class="btn btn-primary form-control")}}
        </div>
    </form>
{% endblock %}