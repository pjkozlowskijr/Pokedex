{% extends 'base.html.j2' %}

{% block css %}
<link rel="stylesheet" href="{{url_for('static', filename='css/lookup.css')}}">
{% endblock %}

{% block title %}
Lookup
{% endblock %}

{% block content %}
<h1>Pokemon Lookup</h1>
<p>Enter your desired Pokemon name in the search bar below. Click "Search" to lookup the Pokemon using the Pokedex.</p>

<form action="{{url_for('lookup')}}" method="POST">
    {{form.hidden_tag()}}
    <div>
        {{form.poke_name.label(class="form-label")}}
        {{form.poke_name(class="form-control")}}
        {% for error in form.poke_name.errors %}
        <span style="color:red">{{error}}</span>
        {% endfor %}
    </div>
    <br>
    <div>
        {{form.search(class="btn btn-dark form-control")}}
    </div>
</form>

{% if pokemon_table %}

<div class="card">
    <div class="row">
        <div class="col-md-4">
            <img src="{{pokemon_table.sprite}}" class="img-fluid" alt="Picture of {{pokemon_table.name}}.">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h2 class="card-title">{{(pokemon_table.name).title()}}</h2>
            </div>
        </div>
    </div>
</div>



<table class="table table-striped table-secondary table-bordered border-dark align-middle">
    <tbody>
        <tr>
            <th scope="row">Name</th>
            <td>{{(pokemon_table.name).title()}}</td>
        </tr>
        <tr>
            <th scope="row">Picture</th>
            <td><img src="{{pokemon_table.sprite}}" alt="Picture of {{pokemon_table.name}}."></td>
        </tr>
        <tr>
            <th scope="row">Base Experience</th>
            <td>{{pokemon_table.base_experience}}</td>
        </tr>
        <tr>
            <th scope="row">Base HP</th>
            <td>{{pokemon_table.hp_base}}</td>
        </tr>
        <tr>
            <th scope="row">Base Attack</th>
            <td>{{pokemon_table.attack_base}}</td>
        </tr>
        <tr>
            <th scope="row">Base Defense</th>
            <td>{{pokemon_table.defense_base}}</td>
        </tr>
        <tr>
            <th scope="row">Ability</th>
            <td>{{(pokemon_table.ability_name).title()}}</td>
        </tr>
    </tbody>
</table>
{% endif %}
{% endblock %}
