{% extends 'base.html.j2' %}

{% block title %}
Lookup
{% endblock %}

{% block content %}
<h1>Pokemon Lookup</h1>
<form action="{{url_for('lookup')}}" method="POST">
    {{form.hidden_tag()}}
    <div>
    {{form.poke_name.label(class="form-label")}}
    {{form.poke_name(class="form-control")}}
    {% for error in form.poke_name.errors %}
    <span style="color:red">{{error}}</span>
    {% endfor %}
    </div>
    <br>
    <div>
    {{form.search(class="btn btn-success form-control")}}
    </div>
</form>

{% if pokemon_table %}
<table class="table table-striped table-secondary mt-4">
    <tr  class="d-flex">
        <th scope="row" class="col-2">Name</th>
        <td class="col-2 text-center">{{(pokemon_table.name).title()}}</td>
    </tr>
    <tr class="d-flex">
        <th scope="row" class="col-2">Picture</th>
        <td class="col-2 text-center"><img src="{{pokemon_table.sprite}}" alt="Picture of {{pokemon_table.name}}."></td>
    </tr>
    <tr class="d-flex">
        <th scope="row" class="col-2">Base Experience</th>
        <td class="col-2 text-center">{{pokemon_table.base_experience}}</td>
    </tr>
    <tr class="d-flex">
        <th scope="row" class="col-2">Base HP</th>
        <td class="col-2 text-center">{{pokemon_table.hp_base}}</td>
    </tr>
    <tr class="d-flex">
        <th scope="row" class="col-2">Base Attack</th>
        <td class="col-2 text-center">{{pokemon_table.attack_base}}</td>
    </tr>
    <tr class="d-flex">
        <th scope="row" class="col-2">Base Defense</th>
        <td class="col-2 text-center">{{pokemon_table.defense_base}}</td>
    </tr>
    <tr class="d-flex">
        <th scope="row" class="col-2">Ability</th>
        <td class="col-2 text-center">{{(pokemon_table.ability_name).title()}}</td>
    </tr>
</table>
{% endif %}

{% endblock %}
