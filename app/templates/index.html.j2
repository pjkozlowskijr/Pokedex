{% extends 'base.html.j2' %}

{% block css %}
<link rel="stylesheet" href="{{url_for('static',filename='css/index.css')}}">
{% endblock %}

{% block title %}
Home
{% endblock %}

{% block content %}
<div class="row mt-5 d-flex align-items-center">
    <div class="col-md-5 carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://res.cloudinary.com/detcvmtip/image/upload/v1652051038/pokedex_images/ash-pikachu_zi8ipj.png" class="car_photos d-block" alt="Ash Ketchum and Pikachu.">
            </div>
            <div class="carousel-item">
                <img src="https://res.cloudinary.com/detcvmtip/image/upload/v1652051038/pokedex_images/ash-kethcum2_hkolfv.png" class="car_photos d-block" alt="Ash Ketchum kneeling.">
            </div>
            <div class="carousel-item">
                <img src="https://res.cloudinary.com/detcvmtip/image/upload/v1652051038/pokedex_images/ash-kethcum5_azwxkd.png" class="car_photos d-block" alt="Ash Ketchum throwing pokeball.">
            </div>
            <div class="carousel-item">
                <img src="https://res.cloudinary.com/detcvmtip/image/upload/v1652051038/pokedex_images/ash-kethcum4_s7e0ai.png" class="car_photos d-block" alt="Ash Ketchum pumped up.">
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <h1>Welcome to the Pok&eacute;dex!</h1>
        {% if current_user.is_authenticated %}
        <p>The Pok&eacute;dex allows you to lookup data on your favorite Pok&eacute;mon. Please click the "Pok&eacute;mon Lookup" link at the top of the page to begin.</p>
        {% else %}
        <p>You must be a registered user to access the Pok&eacute;dex. Click "Login" or "Register" in the top-right to begin.</p>
        {% endif %}
    </div>
</div>
{% endblock %}